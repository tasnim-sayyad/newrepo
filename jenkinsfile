pipeline {
    agent {label 'build-agent'}

    stages {
        stage('Build') {
            steps {
                echo 'Building...'               
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'Java -jar ./target/spring-petclinic-3.3.0-SNAPSHOT.jar &'
            }
        }
    }
}
